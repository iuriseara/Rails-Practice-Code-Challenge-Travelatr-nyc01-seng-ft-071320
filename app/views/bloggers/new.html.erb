<h1>Blogger Form</h1>

<% if flash[:my_errors]%>
    <% flash[:my_errors].each do |error|%>
    <p style="color: red;"><%= error %></p><br>
    <% end %>
<% end %>


<%= form_for @blogger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
 <br>
  <br>
  <%= f.label :age %>
  <%= f.number_field :age %>
 <br>
  <br>
  <%= f.submit %>


<% end %>